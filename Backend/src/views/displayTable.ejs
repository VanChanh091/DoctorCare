<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        table, td, th{
            border: 1px solid black;
            border-collapse: collapse;
        }
        .btnEdit {
            outline: none;
            border: none;
            background: orange;
            height: 25px;
            width: 60px;
            border-radius: 3px;
            cursor: pointer;
        }

        .btnDelete {
            outline: none;
            border: none;
            background: #ff0023;
            height: 25px;
            width: 60px;
            border-radius: 3px; 
            cursor: pointer;
        }
    </style>
</head>
<body>
    <table style="width: 100%;">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
        <% for(let i=0; i<data.length; i++) { %>
            <tr>
                <td><%= data[i].firstName %></td>
                <td><%= data[i].lastName %></td>
                <td><%= data[i].address %></td>
                <td>
                    <button type="button" class="btnEdit">
                        <a href="/edit-crud?id=<%=data[i].id%>">Edit</a>
                    </button>
                    <button type="button" class="btnDelete">
                        <a href="/delete-crud?id=<%=data[i].id%>">Delete</a>
                    </button>
                </td>
            </tr>
        <% } %>
    </table>
</body>
</html>